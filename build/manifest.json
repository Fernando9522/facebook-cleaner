{
    "name": "Target ____",
    "version": "1.0",
    "description": "Collect content targeted to you and cleans your ads preferences, so you can compare what's changed.",
    "background":
    {
        "scripts": ["js/background.js"]
    },
    "browser_action":
    {
        "default_icon": "media/48.png",
        "default_title": "Target ___"
    },
    "permissions": [
        "storage",
        "webRequest",
        "https://www.facebook.com/*",
        "http://www.facebook.com/*",
        "downloads"
    ],
    "icons":
    {
        "128": "media/128.png",
        "16": "media/16.png",
        "48": "media/48.png"
    },
    "content_scripts": [
    {
        "matches": ["https://www.facebook.com/", "http://www.facebook.com/"],
        "js": ["js/content.js"],
        "css": ["css/feed-overlay.css"],
        "run_at": "document_idle"
    },
    {
        "matches": ["https://*.facebook.com/ads/preferences/*", "http://*.facebook.com/ads/preferences/*"],
        "js": ["js/clean.js"],
        "css": ["css/ads-overlay.css"],
        "run_at": "document_idle"
    }],
    "homepage_url": "http://dataselfie.it",
    "manifest_version": 2,
    "omnibox":
    {
        "keyword": "tb"
    }
}